mixin image(file)
  img(src=require(`../assets/images/${file}`), alt="" class!=attributes.class)

mixin card(image, image2, image3, subtitle)
  .card__item
    .card__background
      img(src=require(`../assets/images/${image}`), alt="" class!=attributes.class)
    .card__content
      .card__title
        img(src=require(`../assets/images/${image2}`), alt="" class!=attributes.class)
      .card__img
        img(src=require(`../assets/images/${image3}`), alt="" class!=attributes.class)
      .card__subtitle
        p= subtitle
      .card__btn PLAY NOW

