mixin players(userImage, userName, gameStatus, gameAmount, gameValutaName, gameValutaImg, betMultiple)
  .play
    .playResault
      .useerImage
        img(src=require(`../assets/images/${userImage}`), alt="" class!=attributes.class)
      .userName
        p= userName
      .gameStatus
        p= gameStatus
      .gameAmount
        p= gameAmount
      .gamevaluta
        p= gameValutaName
        img(src=require(`../assets/images/${gameValutaImg}`), alt="" class!=attributes.class)
